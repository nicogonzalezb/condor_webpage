---
import BaseLayout from '@/layouts/BaseLayout.astro'
import SectionHeading from '@/components/SectionHeading.astro'
import Button from '@/components/Button.astro'
import { getLocalCaseStudies } from '@/lib/caseStudies'

const cases = getLocalCaseStudies()
---

<BaseLayout title="Casos de éxito">
  <div class="container-condor py-14 md:py-20">
    <SectionHeading
      title="Casos de éxito"
      subtitle="Ejemplos reales de lo que ya hemos construido."
    />

    <div class="grid gap-6 md:grid-cols-2">
      {cases.map((c) => (
        <div class="group rounded-2xl border border-condor-navy/10 bg-background-card p-7 shadow-[var(--shadow-card)] hover:shadow-[var(--shadow-card-hover)] hover:border-condor-navy/25 transition-all duration-200">
          <div class="text-lg font-bold text-foreground group-hover:text-condor-bluegray transition-colors duration-200">{c.title}</div>
          <p class="mt-2 text-sm leading-6 text-foreground-muted">{c.summary}…</p>
          <div class="mt-4 flex flex-wrap gap-2">
            {c.tags.map((t) => (
              <span class="rounded-full bg-condor-sky/20 border border-condor-sky/40 px-3 py-1 text-xs text-condor-bluegray" style="font-family: var(--font-condor-mono);">
                {t}
              </span>
            ))}
          </div>
          <div class="mt-6">
            <Button href={`/casos/${c.slug}`} variant="secondary">
              Ver detalle
            </Button>
          </div>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
